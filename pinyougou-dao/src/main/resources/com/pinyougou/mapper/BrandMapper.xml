<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pinyougou.mapper.BrandMapper" >
  <select id="findPage" parameterType="entity.PageParameter" resultType="com.pinyougou.pojo.Brand" >
    select id, name, first_char firstChar from tb_brand
    <where>
      <if test="t.name != null and t.name != ''">
        and name like '%${t.name}%'
      </if>
      <if test="t.firstChar != null and t.firstChar != ''">
        and first_char like '%${t.firstChar}%'
      </if>
    </where>
  </select>
</mapper>